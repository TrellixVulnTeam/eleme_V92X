/**index.wxss**/
.topbar {
  display: flex;
  padding: 10px;
  background-color: #1B8BE0;
}

.address {
  position: relative;
  padding: 3px 15px 3px 5px;
  min-width: 100px;
  max-width: 50%;
  font-size: 14px;
  color: #fff;
  text-overflow: ellipsis;
  white-space: nowrap;
  background-color: rgba(0, 0, 0, 0.2);
  border-radius: 15px/50%;
  overflow: hidden;
}

.address__icon {
  margin-top: -2px;
  width: 24px;
  height: 24px;
  vertical-align: middle;
}

.search {
  flex: 1;
  margin-left: 15px;
  padding: 3px 5px;
  font-size: 14px;
  color: #999;
  background-color: #fff;
  border-radius: 15px/50%;
}

.category {
  padding: 0 10px 10px;
  font-size: 14px;
  text-align: center;
  background-color: #fff;
  overflow: hidden;
}

.category__item {
  float: left;
  margin-top: 10px;
  width: 25%;
}

.category__icon {
  height: 36px;
  width: 36px;
}

.example {
  display: block;
  width: 100%;
  height: 70rpx;
  background-color: #f2f2f2;
  line-height: 70rpx;
}

.marquee_box {
  width: 100%;
  position: relative;
}

.marquee_text {
  white-space: nowrap;
  position: absolute;
  top: 0;
  display: flex;
  flex-direction: row;
}

.ad-image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
  margin-top: 15rpx;
}
